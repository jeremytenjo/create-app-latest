{
  "name": "create-modern-app",
  "version": "1.0.0",
  "description": "Quickly create webapps and websites from the terminal",
  "author": "Jeremy Tenjo",
  "license": "ISC",
  "main": "build/index.js",
  "bin": {
    "create-modern-app": "build/index.js"
  },
  "scripts": {
    "test:dev": "node --loader ts-node/esm ./src/index.ts --name testResult/app --type webapp",
    "test:prod": "npm i -g && npx --yes create-modern-app --name testResult/app --type webapp",
    "build": "node ./node_modules/@useweb/compiler/build --node --format cjs",
    "deploy": "npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/concurrently": "^7.0.0",
    "@types/degit": "^2.8.3",
    "@types/node-emoji": "^1.8.1",
    "@useweb/compiler": "^2.2.0",
    "chalk": "^4.1.2",
    "command-line-args": "^5.2.1",
    "degit": "^2.8.4",
    "enquirer": "^2.3.6",
    "ts-node": "^10.8.1"
  }
}
